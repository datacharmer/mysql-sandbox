	configuration file:
        innodb-thread-concurrency=0
        sync_binlog=0
        innodb-log-buffer-size=50M
        innodb-additional-mem-pool-size=100M
        max-connections=350
        max_allowed_packet=48M
        innodb_buffer_pool_size=512M
        innodb-log-file-size=50M
        innodb-flush-method=O_DIRECT
 
